@page
@model ChangePasswordModel
@{

    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Change Password</title>

    <link rel="stylesheet" href="~/css/login.css">


    <style>
        .forgotCon {
            background-image: url('../images/backimage1.png');
            height: 800px;
            width: 100%;
            overflow: hidden;
            background-size: 100% 100%;
            background-repeat: no-repeat;
        }
    </style>

</head>

<body>


    <div id="navbar" class="navbar navbar-default" style="display: block">
        <div class="quickLeftDiv">
            <div class="navbar-container navCon">
                <div class="navbar-header pull-left">
                    <a href="#" class="navbar-brand">
                        <img src="~/images/quickcheck.png" class="mainLogo">


                    </a>

                </div>
            </div>
        </div>
        <div class="quickrightDiv">
            <div>
                <img src="~/images/kotak-bank-logo.png" />
            </div>

        </div>
    </div>
    <div class="forgotCon">
        <form autocomplete="off" [formGroup]="ChangepasswordForm" class="form">
            <div class="quickCheckLogin">

                <div class="clearfix">
                </div>
                <div class="login-container">

                    <h1>
                        Change Password
                    </h1>
                    <div class="inset">
                        <p>


                            <label for="email">
                                New Password
                            </label>
                            <input name="newpassword" type="password" class="form-control inputbox" placeholder="" />

                        </p>
                        <p>

                            <label for="email">
                                Confirm Password
                            </label>
                            <input name="confirmPassword" type="password" class="form-control inputbox" formControlName="confirmPassword" placeholder="" />

                        </p>
                        <p class="backLoginCon">
                            <label id="lblName"></label>
                            <input type="submit" value="Submit" [disabled]="btnSubmitDisabled" class="loginbtn" />
                            <!--<span class="loginBack" (click)="Show()">Back to Login</span>-->
                        </p>
                    </div>

                </div>

            </div>

        </form>
    </div>
    <div class="clearfix"></div>

    <div class="footer" style="display: block">
        <div class="footer-inner">
            <span class="copyRight">Copyright &copy; 2016-2020 | QuickCheck | All Rights Reserved</span>

        </div>
    </div>
</body>
</html>
